@model IEnumerable<MicroSaldoFinal.Models.Ingreso>
@{
    Layout = "_LayoutWithSidebar";
    ViewData["Title"] = "Ingresos";
}

<link rel="stylesheet" href="~/css/incomes.css">

<div class="container">
    <h1>MicroSaldo</h1>

    @if (TempData["Success"] != null)
    {
        <div style="background:#d4edda; border:1px solid #c3e6cb; color:#155724; padding:12px; margin:20px auto; width:600px; border-radius:5px; text-align:center;">
            ✓ @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div style="background:#f8d7da; border:1px solid #f5c6cb; color:#721c24; padding:12px; margin:20px auto; width:600px; border-radius:5px; text-align:center;">
            ✗ @TempData["Error"]
        </div>
    }

    <div class="card">
        <h2>Registro de Ingresos</h2>

        <div class="form-row">
            <form method="post" asp-action="Create" asp-controller="Incomes" class="d-flex gap-2 align-items-center">
                @Html.AntiForgeryToken()
                <input type="text" name="descripcion" placeholder="Descripción" />
                <input type="number" step="0.01" name="monto" placeholder="Monto" required />
                <input type="date" name="fecha" required />
                <button class="btn add" type="submit">Agregar</button>
            </form>
        </div>

        <div class="table">
            <div class="income_header">
                <span>Descripción</span>
                <span>     valor</span>
                <span>Fecha</span>
                <span></span>
            </div>

            @if (!Model.Any())
            {
                <div class="row empty">
                    <span></span><span></span><span></span><span></span>
                </div>
            }

            @foreach (var m in Model)
            {
                <div class="row">
                    <span>@(string.IsNullOrWhiteSpace(m.Descripcion) ? "-" : m.Descripcion)</span>
                    <span class="right">@string.Format("${0:N0}", m.Monto)</span>
                    <span class="center">@m.Fecha.ToString("dd/MM/yyyy")</span>
                    <span class="action">
                        <form method="post" asp-action="Delete" asp-controller="Incomes" style="display:inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@m.Id" />
                            <button class="btn delete" type="submit">Eliminar</button>
                        </form>
                    </span>
                </div>
            }
        </div>
    </div>
</div>