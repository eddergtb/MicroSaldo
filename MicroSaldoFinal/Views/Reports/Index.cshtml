<div class="card data-card mt-4">
    <h2 class="mb-3">Resumen del Período</h2>

        <div class="table-responsive">
            <table class="table table-bordered text-center align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Total Ingresos</th>
                        <th>Total Egresos</th>
                        <th>Saldo del Período</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-success fw-bold">
                            @Model.TotalIngresosPeriodo.ToString("C")
                        </td>
                        <td class="text-danger fw-bold">
                            @Model.TotalEgresosPeriodo.ToString("C")
                        </td>
                        <td class="fw-bold @(Model.SaldoPeriodo >= 0 ? "text-success" : "text-danger")">
                            @Model.SaldoPeriodo.ToString("C")
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

