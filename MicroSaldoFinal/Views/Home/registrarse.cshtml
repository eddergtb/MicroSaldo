@page
@model MicroSaldo.Pages.Home.RegistrarseModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Crear una nueva cuenta</h2>
        <hr />

        <div asp-validation-summary="All" class="text-danger"></div>

        <form method="post">

            <div class="form-group mb-3">
              
                <label asp-for="Input.Nombre" class="form-label">Nombres</label>
              
                <input asp-for="Input.Nombre" class="form-control" />
             
                <span asp-validation-for="Input.Nombre" class="text-danger"></span>
            </div>
   
            <div class="form-group mb-3">
                <label asp-for="Input.Apellido" class="form-label">Apellidos</label>
                <input asp-for="Input.Apellido" class="form-control" />
                <span asp-validation-for="Input.Apellido" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Documento" class="form-label">Documento</label>
                <input asp-for="Input.Documento" class="form-control" />
                <span asp-validation-for="Input.Documento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Telefono" class="form-label">Teléfono</label>
                <input asp-for="Input.Telefono" class="form-control" />
                <span asp-validation-for="Input.Telefono" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Correo" class="form-label">Correo</label>
                <input asp-for="Input.Correo" class="form-control" />
                <span asp-validation-for="Input.Correo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Input.Contrasena" class="form-control" />
                <span asp-validation-for="Input.Contrasena" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Input.ConfirmarContrasena" class="form-label">Confirmar Contraseña</label>
                <input asp-for="Input.ConfirmarContrasena" class="form-control" />
                <span asp-validation-for="Input.ConfirmarContrasena" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Registrarse</button>

        </form>
    </div>
</div>

@section Scripts {
   
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}