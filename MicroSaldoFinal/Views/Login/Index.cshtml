@{
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="d-flex justify-content-center pt-5">

    <section class="register-card border border-dark rounded-0">

        <h1 class="card-title text-center mb-4">MicroSaldo</h1>

        <h3 class="card-subtitle text-center mb-4">Inicio de sesión</h3>

        <form asp-controller="Account" asp-action="Login" method="post" class="d-flex flex-column gap-3">

            <div>
                <label class="form-label">Documento</label>
                <input type="text" class="form-control" name="Document" required />
            </div>

            <div>
                <label class="form-label">Contraseña</label>
                <input type="password" class="form-control" name="Password" required />
            </div>

            <div class="text-start">
                <a asp-controller="Login" asp-action="PassRecovery" class="text-muted small-text">¿Olvidó su contraseña?</a>
            </div>

            <a asp-controller="HomePage" asp-action="Index" class="btn btn-dark mt-3">Iniciar sesión</a>

            <div class="text-center mt-1">
                <a asp-controller="Register" asp-action="Index">
                    ¿No estás registrado?
                </a>
            </div>

        </form>

    </section>
</div>